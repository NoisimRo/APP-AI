# ExpertAP Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database
# =============================================================================
POSTGRES_USER=expertap
POSTGRES_PASSWORD=expertap_dev
POSTGRES_DB=expertap
DATABASE_URL=postgresql://expertap:expertap_dev@localhost:5432/expertap

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Application
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=DEBUG
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# LLM Providers (configure at least one)
# =============================================================================

# Google Vertex AI (Gemini) - Recommended for GCP deployments
VERTEX_AI_PROJECT=your-gcp-project-id
VERTEX_AI_LOCATION=europe-west1

# Google AI Studio (Gemini) - Alternative for development
GEMINI_API_KEY=your-gemini-api-key

# OpenAI - Fallback provider
OPENAI_API_KEY=sk-your-openai-key

# Anthropic - Alternative provider
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# =============================================================================
# Embedding Model
# =============================================================================
# Options: vertex, openai, local
EMBEDDING_PROVIDER=vertex
EMBEDDING_MODEL=text-embedding-004

# =============================================================================
# Authentication (Firebase)
# =============================================================================
FIREBASE_PROJECT_ID=your-firebase-project
# For service account auth (server-side)
# FIREBASE_PRIVATE_KEY={"type": "service_account", ...}
# Or just the key:
# FIREBASE_PRIVATE_KEY_ID=...
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n..."
# FIREBASE_CLIENT_EMAIL=...

# =============================================================================
# Storage (Google Cloud Storage)
# =============================================================================
GCS_BUCKET=expertap-data
GCS_PROJECT=your-gcp-project

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_FREE_QUERIES_PER_DAY=5
RATE_LIMIT_AUTHENTICATED_QUERIES_PER_DAY=20
# Premium users have unlimited queries

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_LEGAL_DRAFTER=true
ENABLE_RED_FLAGS_DETECTOR=true
ENABLE_LITIGATION_PREDICTOR=false
ENABLE_TREND_SPOTTER=false
